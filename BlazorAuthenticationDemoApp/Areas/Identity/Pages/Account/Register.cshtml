<div class="container">
    <div class="row">
        <div class="col-lg-10 col-xl-9 mx-auto">
        <div class="card flex-row my-5 border-0 shadow rounded-3 overflow-hidden">
            <div class="card-img-left d-none d-md-flex">
            <!-- Background image for card set in CSS! -->
            </div>
            <div class="card-body p-4 p-sm-5">
            <h5 class="card-title text-center mb-5 fw-light fs-5">Register</h5>
            <form id="account" method="post">
                @*<div asp-validation-summary="All">
                    <span>Please correct the following errors</span>
                </div>*@

                <div class="form-floating mb-3">
                    <p align="center" style="color:red">@Html.ValidationMessage("RegistrationError")</p>
                </div>


                <div class="form-floating mb-3">
                    <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" type="text" id="floatingInputUsername" placeholder="myusername" required autofocus>
                    <label asp-for="Input.UserName" for="floatingInputUsername">Username</label>
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="useremail" aria-required="true" type="email" id="floatingInputEmail" placeholder="name@example.com">
                    <label asp-for="Input.Email" for="floatingInputEmail">Email address</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <hr>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" type="password" id="floatingPassword" placeholder="Password">
                    <label asp-for="Input.Password" for="floatingPassword">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="confirm-password" aria-required="true" type="password" id="floatingPasswordConfirm" placeholder="Confirm Password">
                    <label asp-for="Input.ConfirmPassword" for="floatingPasswordConfirm">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.City" class="form-control" autocomplete="city" aria-required="true" type="text" id="userCity" placeholder="City">
                    <label asp-for="Input.City" for="userCity">City</label>
                    <span asp-validation-for="Input.City" class="text-danger"></span>
                </div>
                
                <div class="form-floating mb-3">
                    <input asp-for="Input.Role" class="form-control" autocomplete="city" aria-required="true" type="text" id="userRole" placeholder="Role">
                    <label asp-for="Input.Role" for="userRole">Role</label>
                    <span asp-validation-for="Input.Role" class="text-danger"></span>
                </div>

                <div class="d-grid mb-2">
                    <button class="btn btn-lg btn-primary btn-login fw-bold text-uppercase" id="login-submit" type="submit">Register</button>
                </div>

                <a class="d-block text-center mt-2 small" href="#">Have an account? Sign In</a>

                <hr class="my-4">

            </form>
            </div>
        </div>
        </div>
    </div>
</div>